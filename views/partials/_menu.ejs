<%# A template for the menu %>

<%# Grid row %>
<div class="row">
	<div class="container-fluid">

		<%# Grid column with a logo %>
		<div class="col-xs-6">
			<a class="logo" href="#">
				<img src="img/logo.png" class="img-responsive" alt="Logo">
			</a>
		</div>
	
		<%# Grid column with Register and Login links %>
		<div class="col-xs-6"">
			<div class="rightbox">
				<ul class="nav navbar-nav nav navbar-nav pull-right">
					<li menuId="register"><a href="/register"><span class="glyphicon glyphicon-user"></span> Register</a></li>
					<li menuId="login"><a href="#" onclick="document.getElementById('login_modal').style.display='block'" style="width:auto;"><span class="glyphicon glyphicon-log-in"></span> Log in</a></li>
				</ul> 
			</div>
		</div>
	</div>

 	<%# Container with a navbar-toggle button for the collapsible menu %>		
	<nav class="navbar navbar-default" role="navigation">
		<%#set a full width container with the width of the viewport%>
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>                        
				</button>	
			</div>
			
			<%# Navigation bar with links on the left hand side %>		
			<div class="collapse navbar-collapse" id="myNavbar">
				<ul class="nav navbar-nav navbar-left">
					<li menuId="index"><a class="index" href="../" >Home</a></li>
					<li menuId="tickets"><a class="tickets" href="/tickets">Buy Tickets</a></li>
					<li menuId="bands"><a class="bands" href="/bands">Bands</a></li>
					<li menuId="vendors"><a class="vendors" href="/vendors">Vendors</a></li>
					<li menuId="gallery"><a class="gallery" href="/gallery">Gallery</a></li>
					<li menuId="shop"><a class="shop" href="/shop">Shop</a></li>
					<li menuId="connect"><a class="connect" href="/connect">Connect With Us</a></li>
				</ul>
			
				<%# Basket on the right hand side of the navigation bar %>
				<ul class="nav navbar-nav navbar-right" >
					<li><a href="/basket"><span class="glyphicon glyphicon-shopping-cart"></span>Basket<span class="badge badge-warning" id="basket_id"></span></a></li>
				</ul>
			</div>
		</div>
	</nav>
	
	
	
	
	
	

	<div id="login_modal" class="modal">
  
		<form class="modal-content animate" action="#">
			<div class="imgcontainer">
				<span onclick="document.getElementById('login_modal').style.display='none'" class="close" title="Close Modal">&times;</span>
				<img class="logo_log" src="img/logo.png"  alt="logo_log" >
			</div>



			<div id="login_cont" class="container-fluid">
			<div class="form-group">
				<label for="usern"><b>Email address</b></label>
				<input type="email" autocomplete="email" placeholder="Enter your email address" id="usern" required>
			</div>
			<div class="form-group">
				<label for="pass"><b>Password</b></label>
				<input type="password" autocomplete="password" placeholder="Enter your password" id="pass" required>
			</div>
				<button type="submit" onclick="validate_login()" id="submit_login">Log in</button>
				<label>
					<input type="checkbox" checked="checked" name="remember"> Remember me
				</label>
			</div>

			<div class="container-fluid">
				<button type="button" onclick="document.getElementById('login_modal').style.display='none'" class="cancelbtn">Cancel</button>
				<span class="pass">Forgot <a href="/connect">password?</a></span>
			</div>
		</form>
	</div>	
	

	
	
	
